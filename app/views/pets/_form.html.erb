<div class="container">
<%= simple_form_for pet do |f| %>

  <div class="form-group">
    <%= f.input :name %>
    <%= f.input :found_on %>
  </div>

  <div class="form-group">
    <%= f.input :address %>
    <%= f.input :species, collection: Pet::SPECIES %>
  </div>

  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
</div>
